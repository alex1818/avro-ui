<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
        xmlns:kaa="urn:import:org.kaaproject">
       
        <gwt:DockLayoutPanel unit="PX">
                <gwt:north size="100">
                    <gwt:VerticalPanel width="100%">
                        <gwt:cell>
		                    <gwt:HorizontalPanel width="100%" height="55px" spacing="5">
		                        <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
		                            <gwt:FlowPanel width="100%" height="100%">
		                                <gwt:HorizontalPanel height="100%">
		                                    <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
		                                        <gwt:Label ui:field="titleLabel" styleName="b-app-content-title">
		                                        </gwt:Label>                                    
		                                    </gwt:cell>
		                                </gwt:HorizontalPanel>
		                            </gwt:FlowPanel>
		                        </gwt:cell>
		                    </gwt:HorizontalPanel>
	                    </gwt:cell>
                        <gwt:cell>
                            <gwt:HorizontalPanel width="100%" height="45px">
                                 <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
                                    <gwt:FlowPanel width="100%" height="100%">
                                        <gwt:VerticalPanel width="100%" height="100%">
                                            <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="45px">
                                                <kaa:avro.ui.gwt.client.widget.AlertPanel ui:field="errorPanel"/>
                                            </gwt:cell>
                                            <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="45px">
                                                <kaa:avro.ui.gwt.client.widget.AlertPanel ui:field="infoPanel"/>
                                            </gwt:cell>
                                        </gwt:VerticalPanel>
                                    </gwt:FlowPanel>
                                </gwt:cell>
                            </gwt:HorizontalPanel>
                        </gwt:cell>	                    
                    </gwt:VerticalPanel>
                </gwt:north>    
                <gwt:center>
                    <gwt:ScrollPanel>
                        <gwt:FlowPanel>
                              <gwt:FlexTable styleName="b-app-content-details-table" ui:field="detailsTable"/>
                              <gwt:FlowPanel ui:field="footer"/>
                        </gwt:FlowPanel>
                    </gwt:ScrollPanel>
                </gwt:center>
        </gwt:DockLayoutPanel>
       
</ui:UiBinder>
