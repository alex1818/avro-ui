<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
    
        <ui:with field='avroUiSandboxStyle' type='org.kaaproject.avro.ui.sandbox.client.AvroUiSandboxResources.AvroUiSandboxStyle'/>  
    
        <gwt:HorizontalPanel height="100%" width="100%">
            <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                <gwt:HorizontalPanel height="100%">
		            <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                        <gwt:HTMLPanel ui:field="headerTitlePanel" styleName="{avroUiSandboxStyle.bAppHeaderTitle}" width="100%" height="100%"/>
		            </gwt:cell>
                </gwt:HorizontalPanel>
            </gwt:cell>
            <gwt:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
                    <gwt:Button ui:field="resetButton"/>
            </gwt:cell>
        </gwt:HorizontalPanel>
</ui:UiBinder>